{% extends 'base.html.twig' %}

{% block title %}AUDIO | Connexion
{% endblock %}

{% block body %}
	<form method="post">
		{% if error %}
			<div class="alert alert-error">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
		{% endif %}

		<div class="container col-12 col-md-6">

			<h1 class="h3 mb-3 font-weight-normal myp">Connexion</h1>
			<label for="inputEmail">Email</label>
			<input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" autofocus>
			<label for="inputPassword">Mot de Passe</label>
			<input type="password" name="password" id="inputPassword" class="form-control">
			<div class="checkbox mb-3">
				<label>
					<input type="checkbox" name="_remember_me">
					Se souvenir de moi
				</label>
			</div>

			<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
			<div class="d-flex justify-content-center">
				<button class="btn btn-lg btn-primary col-12 col-sm-4 text-center" type="submit">
					Connexion
				</button>
			</div>
		</div>


	</form>
{% endblock %}
