{% extends 'base.html.twig' %}


{% block title %}AUDIO | Upload
{% endblock %}
{% block body %}
	<div class="container d-flex justify-content-center flex-column align-items-center">
		<h2>{{sound.titre}}</h2>
		<div class="audio-player">
			<img src="{{(sound.imageName ? vich_uploader_asset(sound) : asset('build/images/placeholder.png')) | imagine_filter('player_img')}}" alt="{{sound.titre}}">
			<audio  {% if sound.download == false %} controlslist="nodownload"{% endif %} controls src="/uploads/sounds/{{sound.soundName}}"></audio>
		</div>

		<p>{{sound.description}}</p>


	</div>
{% endblock %}
